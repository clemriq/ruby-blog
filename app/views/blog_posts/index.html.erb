<h1 class="text-4xl font-bold mb-8">My Blog</h1>

<% @blog_posts.each do |blog_post| %>
  <div class="mb-6 p-4 border rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold mb-2">
      <%= link_to blog_post.title, blog_post, class: "text-blue-500 hover:underline" %>
    </h2>
    <p class="text-gray-700"><%= blog_post.body %></p>
  </div>
<% end %>