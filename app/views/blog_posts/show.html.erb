<div class="max-w-3xl mx-auto p-6 bg-white rounded-lg shadow-md">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-4xl font-extrabold text-gray-900"><%= @blog_post.title %></h1>
        <% if user_signed_in? %>
            <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "text-blue-500 hover:text-blue-700" %>
        <% end %>
    </div>
    <p class="text-lg text-gray-700 mb-6 leading-relaxed"><%= @blog_post.body %></p>
    <p class="text-sm text-gray-500"><%= @blog_post.created_at.strftime("%B %d, %Y %H:%M") %></p>
</div>