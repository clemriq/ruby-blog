<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body class="min-h-screen bg-gray-50">
  <!-- Alerts -->
  <% if notice %>
    <p class="bg-green-100 text-green-700 p-4 text-center"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="bg-red-100 text-red-700 p-4 text-center"><%= alert %></p>
  <% end %>

  <!-- Navigation -->
  <nav class="bg-white shadow-lg mb-8">
    <div class="max-w-6xl mx-auto px-4 py-3">
      <div class="flex justify-between items-center">
        <%= link_to "Blog", root_path, class: "text-2xl font-bold text-gray-800" %>
        <div class="space-x-4">
          <% if user_signed_in? %>
            <%= link_to "New blog post", new_blog_post_path, class: "inline-block px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors" %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "inline-block px-4 py-2 text-gray-600 hover:text-gray-800 transition-colors" %>
          <% end %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-6xl mx-auto px-4">
    <%= yield %>
  </main>
</body>
</html>